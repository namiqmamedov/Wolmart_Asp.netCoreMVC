@model RegisterVM

@{
    ViewData["Title"] = "Update";
}

<h1>Reset Password</h1>


<div class="form-input">
    <div class="text text-danger" asp-validation-summary="ModelOnly"></div>
  <form method="POST" asp-controller="brand" asp-action="update" asp-area="admin">
                                       <div class="form-group mb-5">
                                        <label>Password *</label>
                                        <input asp-for="Password" class="form-control" required>
                                        <span cite="text text-danger" asp-validation-for="Password"></span>
                                    </div>
                                       <div class="form-group mb-5">
                                        <label>Confirm Password</label>
                                        <input asp-for="ConfirmPassword" class="form-control" required>
                                        <span cite="text text-danger" asp-validation-for="ConfirmPassword"></span>
                                        </div>

    <button type="submit">Update</button> 
  </form>
</div>

@section Script{
    <partial name="_ValidationPartial">
}