@model AddressVM
@{
    ViewData["Title"] = "View";
}

                                        <div class="ecommerce-address shipping-address pr-lg-8">
                                            <h4 class="title title-underline ls-25 font-weight-bold">Shipping Address</h4>
                                            <address class="mb-4">
                                                <table class="address-table">
                                                    <tbody>
                                                        <tr>
                                                            <th>Name:</th>
                                                            <td>@Model.FirstName</td>
                                                        </tr>
                                                        <tr>
                                                            <th>Address:</th>
                                                            <td>@Model.StreetAddrFirst</td>
                                                        </tr>
                                                        <tr>
                                                            <th>City:</th>
                                                            <td>@Model.City</td>
                                                        </tr>
                                                        <tr>
                                                            <th>Country:</th>
                                                            <td>United States (US)</td>
                                                        </tr>
                                                        <tr>
                                                            <th>Postcode:</th>
                                                            <td>@Model.PostCode</td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </address>
                                            <a asp-controller="account" asp-action="shipping"
                                                class="btn btn-link btn-underline btn-icon-right text-primary">Edit your
                                                shipping address<i class="w-icon-long-arrow-right"></i></a>
                                        </div>

