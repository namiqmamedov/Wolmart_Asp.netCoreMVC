@model Category

@{
    ViewData["Title"] = "Update";

    SelectList selectListItems = new SelectList(ViewBag.MainCategories, nameof(Category.ID), nameof(Category.Name));
}

<h1>Update</h1>


<div class="form-input">
  <form method="POST">
    <div class="form-check">
      <input class="form-check-input isMain" type="checkbox" value="" id="flexCheckDefault isMain">
      <label class="form-check-label" for="flexCheckDefault">
        IsMain
      </label>
   </div>
    <div class="form-group">
     <label asp-for="Name">Name</label> 
    <input asp-for="Name" placeholder="Name...">
    <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="form-group imageContainer">
     <label asp-for="Image">Category Image</label>
    <input asp-for="Image" placeholder="Image...">
    <span class="text-danger" asp-validation-for="Image"></span>
    </div>
    <div class="form-group parentContainer">
    <label  asp-for="ParentID">ParentID</label>
    <select asp-for="ParentID" class="form-select" asp-items="@selectListItems"
    aria-label="Default select example">
    </select>
    <span class="text-danger" asp-validation-for="ParentID"></span>
    </div>

